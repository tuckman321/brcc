<%= form_for @pin, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this bridge from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Type of structure" %>
    <%= f.text_field :bridgetype, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Repair Priority" %>
    <%= f.number_field :repairpriority, max: 8, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Inspected by" %>
    <%= f.text_field :inspectby, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Inspection date" %>
    <%= f.date_field :inspectiondate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Recent repairs" %>
    <%= f.text_field :recentrepairs, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>